.Chat
  max-width 1000px
  background gris_mas_claro
  padding-top .62em
  height 320px
  position relative
  img
    min-width 30px
    width 30px
    height 30px
    border-radius 50%

  &-leftMenu
    background blanco
    height 320px
    width 80%
    padding-top .62em
    position absolute
    left -100%
    z-index 5
    .title
      display block
      title_mobile(rosa)
      padding .5rem 1rem
      text-align center
    .list
      list-style none
      margin 0
      padding .5rem 1rem
      .item
        overflow: hidden;
      .user
        color gris
        height 40px
        display block
        white-space nowrap
        margin-bottom .5rem
        &-image
          float left
          margin 5px
        &-name
          overflow hidden
          text-overflow ellipsis
          paragraph_mobile(gris)
          display block
          line-height 40px
    .profile
      z-index 3
      position: absolute;
      height 3.2em
      background gris
      color blanco
      bottom 0
      width 100%
      &-image
        float left
        margin .6em .5em
      &-data
        padding .5em
        .name
          display block
          position relative
          paragraph_mobile(blanco)
        .status
          position relative
          font-size .8em
          margin-left 15px
          &:before
            content ""
            position absolute
            width 5px
            height 5px
            background verde
            border 3px verde solid
            border-radius 50%
            left: -15px
            top: 2px
        .icon-arrow_up
          font-size 3em
          position absolute
          right 10px
          top -7px


  &-main
    min-height 280px
    height 80%
    .messages
      padding 0 .62em
      height 100%
      overflow-y auto
      .message
        border-radius .1em
        box-shadow 0 0 1px 1px rgba(gris_claro, 0.2);
        display flex
        background rosa_claro
        padding .5em
        margin-bottom .5em
        &.me
          background rosa_mas_claro
        &-userImage
          margin-right .5em
          display inline-block
        &-container
          display inline-block
          .author
            subtitle_mobile(gris)
            line-height 30px
            &:after
              content: ":"
          .text
            paragraph_mobile(gris)
          .date
            color gris_claro
            float right
            font-size .8rem

  &-send
    height 3em
    background blanco
    margin 0
    padding 0
    position relative
    .btn
      top .5rem
      position absolute
      background none
      border none
      font-size 2em
      color rosa
    .more
      left 0
    .icon-send
      right 0
    .message
      resize none
      outline none
      margin 0 auto
      display block
      width calc(100% - 98px)
      padding 1em 3em
      height calc(100% - 2em)
      border none
      transition box-shadow .5s
      &:focus
        box-shadow 0 -3px 1px rgba(rosa, 0.9)

.Footer
  display none
