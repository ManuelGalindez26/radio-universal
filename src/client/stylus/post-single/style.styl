.Post
  padding-bottom 2em
  &-cover
    position relative
    .image
      padding 0
      margin 0
      display block
      height 40vw
      max-height 400px
      min-height 150px
      overflow hidden
      background gris
      img
        opacity .5
        min-height 100px
        width 100%
        height 140%

    .title
      title_mobile(blanco)
      position absolute
      padding .5rem
      bottom 5%
      left: 0
      right: 0
      text-align center
      text-shadow 0 0 2px rgba(gris, .7)

  &-meta
    max-width 1000px
    margin 0 auto
    width 80%
    overflow hidden
    .date
      paragraph_mobile(gris_claro)
      padding-top .5em
      float right

  &-content
    max-width 1000px
    margin 0 auto
    width 80%
    p
      img
        max-width 400px
        width 100%

.share
  background rosa_mas_claro
  padding 1em 0
  margin 0 auto
  .text
    subtitle_mobile(rosa)
    display block
    text-align center
    span
      font-weight 300
  .buttons
    padding-top 1em
    text-align center
    .btn-share
      paragraph_mobile(blanco)
      font-weight normal
      display inline-block
      text-decoration none
      padding .5em
      border-radius .2em
    .facebook
      background facebook
    .twitter
      background twitter
